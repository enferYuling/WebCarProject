                //    email: data.field.email,
                //    password: data.field.password,
                //    phoneNum: data.field.phoneNum,
                //    sex: data.field.sex,
                //    userName: data.field.userName
                //};

                //写异步请求
                $.ajax({
                    url: '/UserInfo/CreateUserInfo',//请求的地址，接口
                    type: 'post',
