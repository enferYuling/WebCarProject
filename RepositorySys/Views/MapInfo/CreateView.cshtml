@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="../layuimini/css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>

    <div class="layui-form layuimini-form">
        <div class="layui-form-item">
            <label class="layui-form-label required">地图名称</label>
            <div class="layui-input-block">
                <input type="text" name="mapName" lay-verify="required" lay-reqtext="地图不能为空" placeholder="请输入地图名称" value="" class="layui-input">
                <input type="hidden" name="mapmodelid" >
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label required">文件时间</label>
            <div class="layui-input-block">
                <input type="text" name="filetime" lay-verify="required" id="filetime"   value="" class="layui-input" readonly>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label required">文件地址</label>
                 <div class="layui-inline">
                     
                      <input type="text" id="fileaddress" name="fileaddress" lay-verify="required" value="" class="layui-input" readonly>
                    
                  </div>
                 <div class="layui-inline">
                     <div class="layui-input-block">
                         <button type="button" class="layui-btn" id="upload">上 传 </button>
                     </div>
                  </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认保存</button>
                </div>
            </div>
        </div>
    <script src="../layuimini/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form', 'laydate','upload'], function () {
            var form = layui.form,
                layer = layui.layer,
                $ = layui.$;
            var laydate = layui.laydate;
            var upload = layui.upload;

            var day = new Date();
            var date = day.getDate() < 10 ? '0' + day.getDate() : day.getDate()
            var yue = (day.getMonth() + 1) < 10 ? '0' + (day.getMonth() + 1) : (day.getMonth() + 1)
            showday = day.getFullYear() + '-' + yue + '-' + date;
            day.setDate(day.getDate() + 1);
            //日期 
            laydate.render({
                elem: '#filetime',
               
                value: showday
            });
         
            //监听提交
            form.on('submit(saveBtn)', function (data) {
                console.log(data);

                //var index = layer.alert(JSON.stringify(data.field), {
                //    title: '最终的提交信息'
                //}, function () {

                //    // 关闭弹出层
                //    layer.close(index);
                //    //关闭添加用户页面
                //    var iframeIndex = parent.layer.getFrameIndex(window.name);
                //    parent.layer.close(iframeIndex);

                //});

                //var data1 = data.field;
                //var data2 = {
                //    account: data.field.account,
                //    password: data.field.password,
                //    email: data.field.email,
                //    password: data.field.password,
                //    phoneNum: data.field.phoneNum,
                //    sex: data.field.sex,
                //    userName: data.field.userName
                //};
                var account = sessionStorage.getItem('account');
                var entityjson = {
                    fileaddress: data.field.fileaddress,
                    mapName: data.field.mapName,
                    filetime: data.field.filetime,
                }
               // 写异步请求
                $.ajax({
                    url: '/MapInfo/CreateInfo',//请求的地址，接口
                    type: 'post',
                    data: {
                       
                        entityjson: JSON.stringify(entityjson),
                        createuseraccount: account
                    },  //请求的时候要传递参数或数据
                   
                    success: function (res) {
                        if (res.code == 200) {
                            //关闭添加用户页面
                            var iframeIndex = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(iframeIndex);
                        } else {
                            layer.msg(res.msg);
                        }
                    }
                });

                return true;
            });
            //上传文件
            upload.render({
                elem: '#upload',
                url: '/MapInfo/UploadFile', //后端接收上传文件的URL
                accept: 'file',
                exts: 'jpg|png|xls|xlsx|txt|doc|docx|pgm|pcd',
                done: function (res) {
                    
                    if (res.code == 200)
                    {
                        $('#fileaddress').val(res.data)
                    }
                    else {
                                layer.msg(res.msg);
                            }
                }
                //success: function (res) {
                //    if (res.code == 200) {

                //    } else {
                //        layer.msg(res.msg);
                //    }
                //}
                //,error: function(){} //上传失败的回调
            });
        });
    </script>
    
</body>
</html>